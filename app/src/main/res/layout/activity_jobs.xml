<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base1"
    android:fitsSystemWindows="true"
    tools:context=".JobsActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/thin_block"
        android:paddingLeft="40dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Add Job Vacancy"
        android:textColor="@color/black"
        android:textSize="35dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/jobpositionTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/crimson"
                android:hint="Job Domain"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"

                android:scrollHorizontally="true"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@color/dirtyyellow" />

            <EditText
                android:id="@+id/companynameTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/crimson"
                android:hint="Company Name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"
                android:scrollHorizontally="true"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@color/dirtyyellow" />

            <EditText
                android:id="@+id/locationTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/crimson"
                android:hint="Location"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"
                android:scrollHorizontally="true"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@color/dirtyyellow" />

            <EditText
                android:id="@+id/experienceTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/crimson"
                android:hint="Experience"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"
                android:scrollHorizontally="true"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@color/dirtyyellow" />

            <EditText
                android:id="@+id/salaryTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/crimson"
                android:hint="Salary"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"
                android:scrollHorizontally="true"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@color/dirtyyellow" />

            <EditText
                android:id="@+id/applybyTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/crimson"
                android:hint="Last Date To Apply"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"
                android:scrollHorizontally="true"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@color/dirtyyellow" />

            <EditText
                android:id="@+id/jobdescTV"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/crimson"
                android:hint="Job Description"
                android:textAlignment="gravity"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"
                android:scrollbars="vertical"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@color/dirtyyellow" />

            <EditText
                android:id="@+id/compdescTV"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/crimson"
                android:hint="Company Description"
                android:textAlignment="gravity"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"
                android:scrollbars="vertical"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@color/dirtyyellow" />


            <Button
                android:id="@+id/continueBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_pink_round"
                android:fontFamily="@font/crimson"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="250dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>

